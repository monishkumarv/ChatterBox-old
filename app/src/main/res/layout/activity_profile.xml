<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround_profilepage"
    android:paddingHorizontal="30dp">

    <TextView
        android:id="@+id/create_profile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Profile"
        android:textColor="#85FFFFFF"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/chromatica"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:paddingBottom="20dp"
        android:background="@drawable/profile_card_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/nametv"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:fontFamily="@font/chromatica_medium"
                android:gravity="center_vertical"
                android:text="Name"
                android:textColor="#9C27B0"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/nametv"
                android:background="@drawable/profile_card_background"
                android:focusable="false"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:hint="Enter Your Name  "
                android:inputType="textPersonName"
                android:textColor="#000"
                android:textSize="15dp"
                android:clickable="false"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/dobtv"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:fontFamily="@font/chromatica_medium"
                android:gravity="center_vertical"
                android:text="Birthday"
                android:textColor="#9C27B0"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/dob"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/dobtv"
                android:background="@drawable/profile_card_background"
                android:focusable="false"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:hint="Date"
                android:inputType="date"
                android:textColor="#000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:gravity="center"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/numbertv"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:fontFamily="@font/chromatica_medium"
                android:gravity="center_vertical"
                android:text="Phone"
                android:textColor="#9C27B0"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/number"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/numbertv"
                android:background="@drawable/profile_card_background"
                android:focusable="false"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:hint="Phone No."
                android:inputType="date"
                android:text="+917010680040"
                android:textColor="#000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:gravity="center"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/email_idtv"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:fontFamily="@font/chromatica_medium"
                android:gravity="center_vertical"
                android:text="Email"
                android:textColor="#9C27B0"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/email_id"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/email_idtv"
                android:background="@drawable/profile_card_background"
                android:focusable="false"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:hint="Your Mail"
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:gravity="center"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/male_femaletv"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:fontFamily="@font/chromatica_medium"
                android:gravity="center_vertical"
                android:text="Gender"
                android:textColor="#9C27B0"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/male_female"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/male_femaletv"
                android:background="@drawable/profile_card_background"
                android:focusable="false"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:hint="Male/Female  "
                android:inputType="text"
                android:textColor="#000"
                android:textSize="15dp" />
        </LinearLayout>

        <Button
            android:id="@+id/is_editable"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_edit_violet_24dp"
            android:onClick="Edit"
            android:textSize="30dp" />

    </RelativeLayout>




    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:clickable="false"
        android:onClick="ChangeDP"
        android:src="@drawable/ic_account_circle_grey_100dp" />

    <EditText
        android:id="@+id/bio_et"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/profile_card_background"
        android:focusable="false"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:hint="Tell about Yourself..."
        android:inputType="textPersonName"
        android:maxLength="30"
        android:textColor="#000"
        android:textSize="15dp" />

    <Button
        android:id="@+id/submit_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:background="@drawable/ic_tick_violet_24dp"
        android:fontFamily="@font/chromatica_medium"
        android:onClick="UpdateDetails"
        android:textColor="#EE9C27B0"
        android:textSize="20dp"
        android:visibility="invisible" />


</RelativeLayout>