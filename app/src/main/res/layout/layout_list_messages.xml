<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_list_messages"
    android:gravity="center"
    android:paddingVertical="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="0dp"
        android:id="@+id/friend_profile_pic"
        android:src="@mipmap/ic_launcher"
        android:onClick="ChangeDP"/>



    <TextView
        android:id="@+id/disp_msg_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/friend_profile_pic"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:text="Message"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:textColor="#FFF"
        android:textSize="17sp"
        android:background="@drawable/chat_bubble_green"/>

    <TextView
        android:id="@+id/disp_msg_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:text="Message"
        android:textColor="#FFF"
        android:textSize="17sp"
        android:background="@drawable/chat_bubble_blue"/>

    <TextView
        android:id="@+id/check_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:text="Read"
        android:textSize="10dp"
        android:textColor="#000"
        android:layout_alignBottom="@id/disp_msg_you"
        android:visibility="invisible"/>





</RelativeLayout>
